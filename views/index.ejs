<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head.ejs', {page: 'U.S. States'}) %>
<body class="has-navbar-fixed-top has-background-grey-darker">
    <%- include ('./partials/nav.ejs') %>
    <section class="hero has-background-info-dark has-text-centered">
        <div class="hero-body">
            <h2 class="title is-2 has-text-light">U.S. States</h2>
        </div>
    </section>
    <main class="container">
        <div class="columns is-multiline is-centered">
            <% for (let i = 0; i < states.length; i++) { %>
                <% let state = states[i]; %>
                <div class="column is-three-quarters">
                    <article class="card has-background-grey-dark">
                        <div class="level">
                            <div class="level-left">
                                <div class="card-image">
                                    <figure class="image img-card-figure media-left">
                                        <a href="/states/<%= state._id %>">
                                            <img src="<%= state.flagImg %>" class="flag-list-img" alt="Flag of <%= state.name %>">
                                        </a>
                                    </figure>
                                    <div class="field is-grouped is-grouped-centered">
                                        <div class="control">
                                            <a class="button is-info has-background-info-dark" href="/states/<%= state._id %>">Show State Info</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-content">
                                    <div class="content">
                                        <h2><a href="/states/<%= state._id %>" class="has-text-link-light"><%= state.name %></a></h2>
                                        <h5 class="has-text-light">Population: &nbsp;<%= state.population %></h5>
                                        <h5 class="has-text-light">Demonym: &nbsp;<%= state.demonym %></h5>
                                        <h5 class="has-text-light">Capital: &nbsp;<%= state.capital %></h5>
                                        <h5 class="has-text-light">Largest City: &nbsp;<%= state.largestCity %></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            <% } %>
            <div class="column is-three-quarters">
                <div class="field is-grouped is-grouped-centered">
                    <div class="control form-buttons">
                        <a class="button is-primary has-background-primary-dark" href="/states/new">Add New State</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>